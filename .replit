modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["cairo", "espeak-ng", "ffmpeg", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "imagemagickBig", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libsndfile", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "qhull", "tcl", "tk", "unzip", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "install_deps"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simple Medical App"

[[workflows.workflow]]
name = "install_deps"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add librosa matplotlib opencv-python scikit-learn plotly"

[[workflows.workflow]]
name = "Simple Medical App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run simple_app.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[agent]
integrations = ["python_openai==1.0.0"]
